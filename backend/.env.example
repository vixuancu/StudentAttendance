# Database
DATABASE_URL=postgresql+asyncpg://postgres:your_password@localhost:5432/student_attendance

# Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_RECYCLE=3600
